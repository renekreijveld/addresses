<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>com_addresses</name>
    <creationDate>2025-07-28</creationDate>
    <copyright>Copyright (C) 2025. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <author>Ren√© Kreijveld</author>
    <authorEmail>email@renekreijveld.nl</authorEmail>
    <authorUrl>https://renekreijveld.nl</authorUrl>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <version>1.0.0</version>
    <description></description>
    <namespace path="src">Joomla\Component\Addresses</namespace>

    <!-- Runs on install -->
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <!-- Runs on uninstall -->
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="components/com_addresses">
        <folder>assets</folder>
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <administration>
        <menu>COM_ADDRESSES</menu>
        <submenu>
            <menu link="option=com_addresses&amp;view=addresses" view="addresses" >COM_ADDRESSES_TITLE_ADDRESSES</menu>
        </submenu>
        <files folder="administrator/components/com_addresses">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>assets</folder>
            <folder>bruno</folder>
            <folder>forms</folder>
            <folder>language</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
    </administration>

    <api>
        <files folder="api/components/com_addresses">
            <folder>src</folder>
        </files>
    </api>


</extension>
