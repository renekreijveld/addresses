<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Addresses\Administrator\Field">
	<fieldset name="details">

		<field name="id" type="text" default="0" label="COM_ADDRESSES_FORM_LBL_ADDRESS_ID" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="catid" type="category" extension="com_addresses" class="inputbox" default="" label="JCATEGORY" required="true">
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field name="title" type="text" label="COM_ADDRESSES_ADDRESS_TITLE_LBL" hint="COM_ADDRESSES_ADDRESS_TITLE_DESC" required="true" default="" />

		<field name="address" type="text" label="COM_ADDRESSES_ADDRESS_ADDRESS_LBL" hint="COM_ADDRESSES_ADDRESS_ADDRESS_DESC" required="true" default="" />

		<field name="postcode" type="text" label="COM_ADDRESSES_ADDRESS_POSTCODE_LBL" hint="COM_ADDRESSES_ADDRESS_POSTCODE_DESC" default="" />

		<field name="city" type="text" label="COM_ADDRESSES_ADDRESS_CITY_LBL" hint="COM_ADDRESSES_ADDRESS_CITY_DESC" default="" />

		<field name="country" type="text" label="COM_ADDRESSES_ADDRESS_COUNTRY_LBL" hint="COM_ADDRESSES_ADDRESS_COUNTRY_DESC" default="" />

		<field name="state" type="list" label="COM_ADDRESSES_ADDRESS_STATE_LBL" hint="COM_ADDRESSES_ADDRESS_STATE_DESC" class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="created_by" type="createdby" label="COM_ADDRESSES_ADDRESS_CREATED_BY_LBL" hint="COM_ADDRESSES_ADDRESS_CREATED_BY_DESC" default="" />

	</fieldset>
</form>
